
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<a href="/Barang/Create">Create</a>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/scripts/bootstrap.min.js" rel="stylesheet" />
</head>
<body>
    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover table-condensed">
            <thead>
                <tr>
                    <th>ID Item</th>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Stock</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @{
                    foreach (System.Data.DataRow dr in ViewBag.barang.Rows)
                    {
                        <tr>
                            <td>@dr["kode_barang"]</td>
                            <td>@dr["nama_barang"]</td>
                            <td>@dr["harga_barang"]</td>
                            <td>@dr["total_barang"]</td>
                            <td>
                                <a href="/Barang/Edit?id=@dr["kode_barang"]">Edit</a>
                                <a href="/Barang/Delete?id=@dr["kode_barang"]">Delete</a>
                            </td>
                        </tr>
                    }
                }
                
            </tbody>
        </table> 

    </div>
</body>
</html>

